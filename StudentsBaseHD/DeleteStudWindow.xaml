<Window x:Class="StudentsBaseHD.DeleteStudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsBaseHD"
        mc:Ignorable="d"
        Title="Удалить" Height="150" Width="250" ResizeMode="NoResize">
    <Grid>
        <Label Content="Удалить студента №" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,20"/>
        <TextBox x:Name="DelTargetTB" HorizontalAlignment="Right" TextWrapping="Wrap"  VerticalAlignment="Center" Width="50" Margin="0,0,20,20"/>
        <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Background="{x:Null}" Margin="20,0,0,10" IsCancel="True"/>
        <Button Content="Удалить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Background="{x:Null}" Margin="0,0,20,10" Click="Button_Click"/>
    </Grid>
</Window>
