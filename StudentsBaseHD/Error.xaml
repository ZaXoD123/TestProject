<Window x:Class="StudentsBaseHD.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsBaseHD"
        mc:Ignorable="d"
        Title="Error" Height="150" Width="250" ResizeMode="NoResize">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,20,15" VerticalAlignment="Bottom" Width="70" Height="30" IsCancel="True" Background="{x:Null}"/>
        <Label x:Name="ErrTB" Content="Invalid Operation!" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="20,20,0,0" Background="{x:Null}" />

    </Grid>
</Window>
